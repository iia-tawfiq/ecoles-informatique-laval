@model ecoles_informatiques.Models.ViewModels.SchoolEnumerationViewModel

@{
    ViewData["Title"] = "Liste des écoles";
}

<div class="text-center">
    <h1>Liste des écoles d'informatique à Laval (53)</h1>
    @using (Html.BeginForm())
    {
        <p>
            @Html.TextBox("Search")
            <input type="submit" value="Rechercher">
        </p>
    }
    <table class="table table-striped mt-4">
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Ville</th>
        </tr>
        @foreach (var school in Model.Schools)
        {
            <tr>
                <td>@school.Name</td>
                <td>@school.Address</td>
                <td>@school.City</td>
            </tr>
        }
    </table>
</div>


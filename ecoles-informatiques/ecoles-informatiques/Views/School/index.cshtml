@model ecoles_informatiques.Models.ViewModels.SchoolEnumerationViewModel

@{
    ViewData["Title"] = "Liste des écoles";
}

<div class="text-center">
    <h1>Liste des écoles d'informatique à Laval (53)</h1>
    <form asp-action="Index" method="get">
        <p>
            <input type="text" name="search" value="@ViewData["currentFilter"]">
            <input type="submit" value="Rechercher">
        </p>
    </form>
    <table class="table table-striped mt-4">
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Ville</th>
        </tr>
        @foreach (var school in Model.Schools)
        {
            <tr>
                <td>@school.Name</td>
                <td>@school.Address</td>
                <td>@school.City</td>
            </tr>
        }
    </table>
</div>

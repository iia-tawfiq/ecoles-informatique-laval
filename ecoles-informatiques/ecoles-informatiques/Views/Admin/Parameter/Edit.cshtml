@model ecoles_informatiques.Models.ViewModels.AdminParameterEditViewModel

@{
    ViewData["Title"] = "Administration - Éditer le paramètre " + Model.Parameter.Id;
}

<div>
    <h1>Éditer le paramètre @Model.Parameter.Id</h1>
    <form asp-controller="AdminParameter" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="@Model.Parameter.Key"></label>
            <input asp-for="@Model.Parameter.Key"/>
            <span asp-validation-for="@Model.Parameter.Key"></span>
        </div>
        <div>
            <label asp-for="@Model.Parameter.Value"></label>
            <input asp-for="@Model.Parameter.Value"/>
            <span asp-validation-for="@Model.Parameter.Value"></span>
        </div>
        <input type="hidden" asp-for="@Model.Parameter.Id"/>
        @Html.AntiForgeryToken()
        <input type="submit" value="Save"/>
    </form>
    <a asp-controller="AdminParameter" asp-action="Index">Retour</a>
</div>
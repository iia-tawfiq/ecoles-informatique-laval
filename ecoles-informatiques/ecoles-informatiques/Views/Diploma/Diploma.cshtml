@model DiplomaViewModel
@{
    ViewData["Title"] = Model.Diplomas.Name;
}

<div class="text-center">
    <h1 class="display-4">Model.Diplomas.Name</h1>
</div>
<div>
    <ul>
        @foreach (Formation f in Model.Formations)
        {
            if (@f.DiplomaId == Model.Diplomas.Id)
            {
                <li><a asp-controller="Diplomas" asp-action="Diploma" asp-route-id="Model.Diplomas.Id">@Model.Diplomas.Name</a></li>
            }
        }
    </ul>
</div>